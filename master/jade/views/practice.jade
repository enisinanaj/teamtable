.container-md(ng-controller='PracticeController as practiceDetail')
  .card
    .card-heading.bg-primary
      .card-title(style="font-size:20px!important; padding-left: 20px;") Dettaglio pratica
    .card-body(style="border: 1px solid #f5f5f5")
      .col-lg-4
        label.text-muted(style="font-weight: normal") Dati pratica
        span [
          a(ng-href="{{$state.href('app.add_practice', {practiceId: practiceDetail.practice.id})}}") modifica pratica
          |]
      .col-lg-2(style="text-align: right;")
        .row.mr-sm
          label(style="font-weight: normal;") Nome pratica
        .row.mr-sm
          label(style="font-weight: normal;") Note
      .col-lg-6
        .row
          label {{practiceDetail.practice.name}}
        .row
          label {{practiceDetail.practice.description}}
      .clearfix
    .card-body
      .col-lg-4
        label.text-muted(style="font-weight: normal;") Elenco eventi
        span [
          a(ng-href="{{$state.href('app.add_event', {eventId: 0, practiceId: practiceDetail.practice.id})}}") aggiungi evento
          |]
      .clearfix
      table.row-border.hover(datatable='ng', dt-options='practiceDetail.dtOptions' dt-column-defs='practiceDetail.dtColumnDefs')
        thead
          tr
            th Operatore inserimento
            th Evento
            th Data
            th Dettaglio
        tbody
          tr(ng-repeat='event in practiceDetail.events')
            td {{event.creator.username}}
            td {{event.description}}
            td {{event.eventDate}}
            td 
              a.btn.btn-primary(ng-href="{{$state.href('app.single_event', {eventId: event.id})}}")
                i.icon-magnifier