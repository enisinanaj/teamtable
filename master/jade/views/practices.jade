.container-md
  .card
    .card-heading.bg-primary
      .card-title Elenco pratiche
    .card-body
      div(ng-controller='PracticesController as practices')
        table.row-border.hover(datatable='ng', dt-options='practices.dtOptions' dt-column-defs='practices.dtColumnDefs')
          thead
            tr
              th Operatore inserimento
              th Pratica
              th Note
          tbody
            tr(ng-repeat='practice in practices.elements')
              td {{ practice.creator.username }}
              td
                a(ng-href="{{$state.href('app.single_practice', {practiceId: practice.id})}}") {{ practice.name }}
              td {{ practice.description }}

      .row.card-body
        .col-sm-12.col-xm-12.col-lg-12.col-md-12
          span
            i Nota: Clicca sul nome della pratica per accedere al dettaglio