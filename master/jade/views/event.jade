.container-md(ng-controller='EventController as eventDetailController')
  .card
    .card-heading.bg-primary(ng-click="eventDetailController.goToPractice()")
      .card-title(style="font-size:20px!important; padding-left: 20px;") Pratica
        strong {{eventDetailController.event.practice.name}}
    .card-heading.bg-info(style="box-shadow: 0px -5px 5px -1px rgba(0,0,0,0.15);")
      .card-title(style="font-size:20px!important; color:#E8EAF6!important; padding-left: 20px;") Dettaglio Evento
    .card-body(style="border: 1px solid #f5f5f5")
      .col-lg-4
        label.text-muted(style="font-weight: normal;") Dati evento 
        span [
          a(ng-href="{{$state.href('app.add_event', {eventId: eventDetailController.event.id, practiceId: eventDetailController.event.practice.id})}}") modifica evento
          |]
      .col-lg-2(style="text-align: right;")
        .row.mr-sm
          label(style="font-weight: normal;") Nome evento
        .row.mr-sm
          label(style="font-weight: normal;") Data evento
      .col-lg-6
        .row
          label {{eventDetailController.event.description}}
        .row
          label {{eventDetailController.event.eventDate}}
      .clearfix
    .card-body
      .col-lg-4
        label.text-muted(style="font-weight: normal;") Elenco attività
        span [
          a(ng-href="{{$state.href('app.add_activity', {activityId: 0, eventId: eventDetailController.event.id})}}") aggiungi attività
          |]
      .clearfix
      table.row-border.hover(datatable='ng', dt-options='eventDetailController.dtOptions' dt-column-defs='eventDetailController.dtColumnDefs')
        thead 
          tr  
            th Attività
            th Tipo attività
            th Operatore incaricato
            th Stato attività
            th Dettaglio
        tbody
          tr(ng-repeat='activity in eventDetailController.activities')
            td
              strong {{activity.name}}
              .clearfix
              span.text-muted {{activity.description}}
            td {{activity.activityType}}
            td {{activity.assignee.username}}
            td {{activity.status}}
            td 
              a.btn.btn-primary(ng-href="{{$state.href('app.single_activity', {activityId: activity.id})}}")
                i.icon-magnifier
